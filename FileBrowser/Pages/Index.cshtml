@page
@model FileBrowser.Pages.IndexModel

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FileBrowser</title>
    <link rel="shortcut icon" href="@Url.Content("~/icon/favicon.ico")" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/main.css")">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QZKLLQXNS6"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-QZKLLQXNS6');
    </script>
</head>

<body>
    <div class="main">
        @if(Model.folders?.Count > 0)
        {
            <div class="board">
                @foreach(var item in Model.folders)
                {
                    <div><a href="?path=@Uri.EscapeDataString(item)" onclick="onLink(event)">@item</a></div>
                }
            </div>
        }

        @if(Model.files?.Count > 0)
        {
            <div class="img-board">
                @foreach(var item in Model.files)
                {
                    <div><img src="api/file/image/@Uri.EscapeDataString(item)" /></div>
                }
            </div>
        }

        <div class="btn-board" style="display: none">
            <a href="@Href("~/")" onclick="onLink(event)" class="button">
                <i class="fa-solid fa-house"></i></a>
            <a href="javascript:void(0)" onclick="onBack(event)" class="button">
                <i class="fa-solid fa-arrow-left fa-lg"></i></a>
        </div>
    </div>

    <script src="@Url.Content("~/js/main.js")"></script>
</body>

</html>